entrypoint = "main.py"
modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "uvicorn main:app --host 0.0.0.0 --port 5000"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "npm install"]

[workflows]
runButton = "Full Stack Dev"

[[workflows.workflow]]
name = "Run server"
author = 41158153
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[[workflows.workflow]]
name = "AI Responder"
