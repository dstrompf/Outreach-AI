entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "AI Email System"

[[workflows.workflow]]
name = "Run server"
author = 41158153
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "AI Responder"
author = 41158153
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 responder_server.py"

[[workflows.workflow]]
name = "AI Email System"
author = 41158153
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 responder_server.py"

