entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "AI Email System"

[[workflows.workflow]]
name = "Run server"
author = 41158153
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[[workflows.workflow]]
name = "AI Responder"
author = 41158153
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 responder_server.py"

[[workflows.workflow]]
name = "AI Email System"
author = 41158153
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"python3 main.py\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"python3 responder_server.py\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 responder_server.py &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80
